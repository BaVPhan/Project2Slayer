<div class="content">
<h2>Edit current hero!</h2>
<ul>
<%= form_for @hero do |f| %>
  <li>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </li>
  <br>
  <li>
    <%= f.label :hero_strength %>
    <%= f.text_field :weapon_strength %>
  </li>
  <br>
  <li>
    <%= f.label :photo %>
    <%= f.text_field :img_url %>
  </li>
  <br>
    <%= f.submit "Edit!"%>
</ul>
<% end %>


<%= link_to "Delete!", @hero, method: :delete, class: "delete" %>
</div>
