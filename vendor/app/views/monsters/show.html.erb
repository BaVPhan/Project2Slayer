<div class="content">
<h2><%= @monster.name %> <%= link_to "(Edit Monster)", edit_monster_path(@monster) if @current_user %></h2>
<h4>Health Points: <%= @monster.health %></h4>
<h4>Habitat: <%= @monster.habitat %></h4>
<h4>Currently assigned to hero ID: <%= @monster.hero_id %> </h4>
<%= link_to "Delete this creature!", @monster, method: :delete, class: "delete" if @current_user %>

<%= image_tag @monster.img_url, class: "monster-photo" %>
</div>
